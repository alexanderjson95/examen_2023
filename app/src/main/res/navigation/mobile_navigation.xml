<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.frontend_android.ui.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_reg"
            app:destination="@id/navigation_register" />

        <action
            android:id="@+id/action_login_to_dashboard"
            app:destination="@id/navigation_dashboard"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/navigation_booking"
        android:name="com.example.frontend_android.ui.schedule.MyBookingFragment"
        android:label="@string/booking"
        tools:layout="@layout/fragment_booking">
        <action
            android:id="@+id/action_bookingFragment_to_bookingDialog"
            app:destination="@id/navigation_booking_dialog" />
        <argument
            android:name="projectId"
            app:argType="long" />
        <argument
            android:name="userId"
            app:argType="long" />

    </fragment>

    <fragment
        android:id="@+id/navigation_edit_booking_dialog"
        android:name="com.example.frontend_android.ui.project.AddProjectDialog"
        tools:layout="@layout/add_project_form"/>



    <fragment
        android:id="@+id/navigation_projects"
        android:name="com.example.frontend_android.ui.project.ProjectsFragment"
        tools:layout="@layout/fragment_projects"/>

    <dialog
        android:id="@+id/navigation_booking_dialog"
        android:name="com.example.frontend_android.ui.schedule.BookingDialog"
        tools:layout="@layout/add_booking_form">

        <argument
            android:name="dateMillis"
            app:argType="long" />
        <argument
            android:name="selectedProject"
            app:argType="string" />

        <argument
            android:name="selectedUser"
            app:argType="string" />
        <argument
            android:name="startHour"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="startMin"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="endHour"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="endMin"
            app:argType="integer"
            android:defaultValue="0" />
    </dialog>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.example.frontend_android.ui.registration.RegisterFragment"
        tools:layout="@layout/fragment_register">
    <action
        android:id="@+id/action_reg_to_login"
        app:destination="@id/navigation_login"
        app:popUpTo="@id/navigation_register"
        app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.frontend_android.ui.messages.MessageFragment"
        tools:layout="@layout/fragment_messages"/>

    <fragment
        android:id="@+id/navigation_add_message"
        android:name="com.example.frontend_android.ui.messages.AddMessageDialog"
        tools:layout="@layout/add_message_form"/>

    <fragment
        android:id="@+id/navigation_users"
        android:name="com.example.frontend_android.ui.user.UsersFragment"
        tools:layout="@layout/fragment_users"/>





    <fragment
        android:id="@+id/navigation_myProject"
        android:name="com.example.frontend_android.ui.MyProject.MyProjectFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_my_project">
        <action
            android:id="@+id/myProject_to_bookings"
            app:destination="@id/navigation_booking" />

        <action
            android:id="@+id/myProject_to_members"
            app:destination="@id/navigation_members" />

        <argument
            android:name="projectId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/navigation_members"
        android:name="com.example.frontend_android.ui.schedule.ProjectUserFragment"
        tools:layout="@layout/fragment_users">
        <argument
            android:name="projectId"
            app:argType="long" />

        <argument
            android:name="userId"
            app:argType="long" />
    </fragment>


    <fragment
        android:id="@+id/navigation_create_project_dialog"
        android:name="com.example.frontend_android.ui.project.AddProjectDialog"
        android:label="@string/skapa_projekt"
        tools:layout="@layout/add_project_form">
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.frontend_android.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/dash_to_myProject"
            app:destination="@id/navigation_myProject" />

        <action
            android:id="@+id/dash_to_project_dialog"
            app:destination="@id/navigation_create_project_dialog" />
    </fragment>


    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.frontend_android.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>